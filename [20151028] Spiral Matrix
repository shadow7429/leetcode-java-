// startTime: 12:01
// finishTime: 1:01 stuck in the runtime error
// https://leetcode.com/problems/spiral-matrix/

public class Solution {
    public List<Integer> spiralOrder(int[][] matrix) {
        if(matrix.length==0)
        return new ArrayList<Integer>();
        
        List<Integer> res = new ArrayList<Integer>();
        
        int x = matrix.length;
        int y = matrix[0].length;
        int num = x*y;
        int circle = 0;
        int count = 0;
        while(count<num){
            int currentx = circle;
            int currenty = circle;
            while(currenty<(y-circle) && count<num){
                res.add(matrix[currentx][currenty]);
                currenty++;
                count++;
            }
            
            currenty = y-circle-1;
            currentx = circle+1;
            while(currenty>=0 && currentx<(x-circle) && count<num){
                res.add(matrix[currentx][currenty]);
                currentx++;
                count++;
            }
            
            currentx = x-circle-1;
            currenty = y-circle-2;
            while(currentx>=0 && (currenty)>=circle && count<num){
                res.add(matrix[currentx][currenty]);
                currenty--;
                count++;
            }
            
            currenty = circle;
            currentx = x-circle-2;
            while(currenty>=0 && (currentx)>=(circle+1) && count<num){
                res.add(matrix[currentx][currenty]);
                currentx--;
                count++;
            }
            circle++;
        }
        
        return res;
    }
}
